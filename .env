# AlphaStriker default .env
# Remplissez les valeurs sensibles (PRIVATE_KEY, HELIUS_API_KEY, OPENROUTER_API_KEY, etc.)
# Ne commitez jamais vos vraies clés dans un dépôt public.

# --- Réseau / RPC Solana ---
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WSS_URL=wss://api.mainnet-beta.solana.com/
JITO_SHREDSTREAM_GRPC_URL=frankfurt.mainnet.jito.wtf:8001
HELIUS_API_KEY=

# --- Wallet ---
PRIVATE_KEY=
WALLET_ADDRESS=

# --- Paramètres trading ---
INITIAL_CAPITAL_SOL=0.05
BUY_AMOUNT_SOL=0.01
SELL_MULTIPLIER=2.0
TRAILING_STOP_PERCENT=0.15


# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(message)s

# Profit / stop-loss
PROFIT_MULTIPLIER_SELL=2.0
STOP_LOSS_PROFIT_MULTIPLIER=5.0

# Latency monitoring
LATENCY_TARGET_MS=150

# --- IA / Google Gemini ---
# Renseignez au moins une clé. Le bot basculera automatiquement si un quota est atteint.
GEMINI_API_KEY_1=
GEMINI_API_KEY_2=
GEMINI_API_KEY_3=
GEMINI_MODEL=gemini-2.5-flash

# --- Base de données ---
DATABASE_URL=sqlite:///./solana_bot.db

# --- Mode simulation ---
SIMULATION_MODE=False
SIMULATION_REPORT_PATH=simulation_report.csv
